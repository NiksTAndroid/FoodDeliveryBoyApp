<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--android:background="@android:color/transparent"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_8dpcurved_white"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_8dpcurved_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conlay1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_blackwhite_gradient"
        >

        <com.prometteur.fooddeliveryboy.Utils.PoppinsRegularTextView
            android:id="@+id/tvTitleForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/ivCancel"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="0dp"
            android:src="@drawable/iv_white_cancel"
            android:layout_marginRight="@dimen/_8sdp"
            android:padding="@dimen/_3sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvTitleForgot"
            app:layout_constraintBottom_toBottomOf="@id/tvTitleForgot"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.prometteur.fooddeliveryboy.Utils.PoppinsRegularTextView
        android:id="@+id/tvTitleEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/black_22"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/conlay1"
        />

    <com.prometteur.fooddeliveryboy.Utils.CustomeEditText
        android:id="@+id/edtEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp"
        android:textSize="@dimen/_13sdp"
        android:drawablePadding="@dimen/_5sdp"
        android:drawableLeft="@drawable/iv_black_emailand"
        android:background="@drawable/bg_curved_greyf0"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="@id/tvTitleEmail"
        app:layout_constraintEnd_toEndOf="@id/tvTitleEmail"
        app:layout_constraintTop_toBottomOf="@id/tvTitleEmail"
        />


    <com.prometteur.fooddeliveryboy.Utils.PoppinsRegularTextView
        android:id="@+id/tvSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/white"
        android:paddingRight="@dimen/_20sdp"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:background="@drawable/bg_curved_dustyellow"
        app:layout_constraintEnd_toEndOf="@id/edtEmail"
        app:layout_constraintTop_toBottomOf="@id/edtEmail"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</RelativeLayout>